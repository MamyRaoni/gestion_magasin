{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
    <p class="font-mono text-xl pl-10">Categories List</p>
    <div class="flex w-full flex-col lg:flex-row">
        <div class="card bg-base-100 rounded-box grid grow place-items-center">
            <table class="table">
                <!-- head -->
                <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <th>{{ category.id }}</th>
                            <td>{{ category.name }}</td>
                            <td>
                                <a href="{{ path('app_products_categories', {'id': category.id}) }}">show</a>
                                <a href="{{ path('app_categories_edit', {'id': category.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_categories_new') }}">Create new</a>
        </div>
        
    </div>
    


{% endblock %}
